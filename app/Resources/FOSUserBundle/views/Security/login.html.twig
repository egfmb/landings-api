{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div  style=" width: 100%; height: 100% ; background-image: url('http://localhost/zenefits/web/assets/principal/images/loan.jpg');" >
<div class="app app-header-fixed ">


    <div class="container w-xxl w-auto-xs">
        <a href class="navbar-brand block m-t">WiiNIK</a>
        <div class="m-b-lg">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <div class="text-danger wrapper text-center" ng-show="authError">

                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="list-group list-group-sm">
                    <div class="list-group-item">
                        <input type="email" placeholder="Email" class="form-control no-border" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="list-group-item">
                        <input type="password"  placeholder="Password" class="form-control no-border"  id="password" name="_password" required="required" />
                    </div>
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />INGRESAR</button
                <div class="text-center m-t m-b"><a ui-sref="access.forgotpwd">Olvidaste el password?</a></div>
                <div class="line line-dashed"></div>
                <a href="./register" class="btn btn-lg btn-default btn-block">Crear una cuenta</a>
            </form>

        </div>
    </div>

</div>

</div>
{% endblock fos_user_content %}

